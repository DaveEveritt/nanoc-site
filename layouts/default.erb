<!DOCTYPE HTML>
<html lang="en">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

		<!-- title -->
		<% if @item[:title] %>
			<title><%= @item[:has_full_title] ? @item[:title] : 'nanoc &raquo; ' + @item[:title] %></title>
		<% else %>
			<title>nanoc &raquo; Blog &raquo; <%= Time.parse(@item[:created_at]).localtime.format_as_date %></title>
		<% end %>

		<!-- stylesheets -->
		<link rel="stylesheet" href="<%= item('/assets/style/').reps[0].path %>" type="text/css" media="screen">
		<% (@item[:extra_stylesheets] || []).each do |stylesheet| %>
			<link rel="stylesheet" href="<%=h stylesheet %>" type="text/css" media="screen">
		<% end %>

		<!-- feed -->
		<link rel="alternate" type="application/atom+xml" title="nanoc news" href="http://feeds.feedburner.com/nanoc">

		<!-- scripts -->
		<% (@item[:extra_scripts] || []).each do |script| %>
			<script type="text/javascript" src="<%=h script %>"></script>
		<% end %>
	</head>
	<body>
		<div class="nav">
			<ul>
				<li><%= nav_link_to_unless_current('home',        '/')             %></li>
				<li><%= nav_link_to_unless_current('news',        '/news/')        %></li>
				<li><%= nav_link_to_unless_current('about',       '/about/')       %></li>
				<li><%= nav_link_to_unless_current('tutorial',    '/tutorial/')    %></li>
				<li><%= nav_link_to_unless_current('manual',      '/manual/')      %></li>
				<li><%= nav_link_to_unless_current('migrating',   '/migrating/')   %></li>
				<li><%= nav_link_to_unless_current('community',   '/community/')   %></li>
			</ul>
		</div>

		<div class="body">
<% unless @item[:raw_layout] %>
			<div class="article">
<% end %>

				<!-- title -->
				<% if @item[:kind] == 'article' %>
					<% if @item[:title] %>
						<h1>Blog &raquo; <%=h @item[:title] %></h1>
					<% else %>
						<h1>Blog &raquo; <%= Time.parse(@item[:created_at]).localtime.format_as_date %></h1>
					<% end %>
				<% elsif !@item[:raw_layout] %>
					<h1><%= @item[:title] %></h1>
				<% end %>

				<% if @item[:kind] == 'article' %>
					<!-- meta -->
					<p class="meta"><span>Written <%= Time.parse(@item[:created_at]).localtime.format_as_date %>.</span></p>
				<% end %>

				<!-- content -->
				<%= yield %>

<% unless @item[:raw_layout] %>
			</div>
<% end %>
		</div>

		<div id="footer">
			<div id="footer-inside">
				<p>nanoc &copy; 2007-2009 Denis Defreyne. The content of the nanoc web site is licensed under a <a rel="license" href="http://creativecommons.org/licenses/by-sa/2.0/be/">Creative Commons Attribution-ShareAlike 2.0 Belgium License</a>. nanoc is licenced under the MIT licence.</p>
			</div>
		</div>

<% if @config[:enable_ramalytics] %>
		<script src="http://ram.purepistos.net/ramalytics.js"></script>
<% end %>
	</body>
</html>
